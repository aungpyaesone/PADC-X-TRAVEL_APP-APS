<?xml version="1.0" encoding="utf-8"?>
    <com.aungpyaesone.padc_x_travel_app_aps.view.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/emptyImage"
        android:src="@drawable/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emptyImage"
        android:layout_centerHorizontal="true"
        />
</com.aungpyaesone.padc_x_travel_app_aps.view.viewpods.EmptyViewPod>